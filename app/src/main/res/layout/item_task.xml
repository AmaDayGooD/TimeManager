<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/light_main"
    android:orientation="vertical"
    app:cardCornerRadius="26dp">

    <LinearLayout
        android:id="@+id/task_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/text_view_task_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:lines="2"
                android:maxLines="2"
                android:text="@string/task_name"
                android:textColor="@color/main"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_task_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="7dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="30.03.2024\n12:00"
                android:textAlignment="textEnd"
                android:textColor="@color/main"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_low_seriousness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lightning" />

                <ImageView
                    android:id="@+id/ic_medium_seriousness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lightning" />

                <ImageView
                    android:id="@+id/ic_high_seriousness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lightning" />

                <ImageView
                    android:id="@+id/ic_extra_high_seriousness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lightning" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_award_fire"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|end"
                android:text="sdf"
                android:textColor="@color/main"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>