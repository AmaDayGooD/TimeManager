<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/light_main"
    android:orientation="vertical"
    app:cardCornerRadius="26dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:weightSum="100">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/CustomProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E0E0E0"
            android:maxHeight="20dp"
            android:minHeight="10dp"
            android:visibility="gone"
            android:progressTint="#FF4081" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_name_award"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:fontFamily="@font/manrope_medium"
                android:text="Название награды"
                android:textColor="@color/main"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_view_award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|end"
                android:textColor="@color/main"
                android:textSize="20sp"
                app:drawableEndCompat="@drawable/ic_award_fire" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_description_award"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:paddingTop="7dp"
            android:text="Краткое описание"
            android:textColor="@color/gray"
            android:textSize="18sp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>